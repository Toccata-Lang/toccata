(defn write* [file-desc str-buffer]
  ;; private function. Use 'write' instead
  (inline C Integer "
  char *buffer;
  int64_t len;

  fileDescStruct *fileDesc = (fileDescStruct *)((Opaque *)file_desc_0)->ptr;
  if (str_buffer_1->type == StringType) {
