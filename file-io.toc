  } else if (str_buffer_1->type == SubStringType) {
    buffer = ((SubString *)str_buffer_1)->buffer;
    len = ((SubString *)str_buffer_1)->len;
  } else {
    fprintf(stderr, \"\\ninvalid type for 'write*'\\n\");
