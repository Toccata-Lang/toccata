
(deftype and-ast [clauses]
  (assert (instance? Vector clauses))

  Stringable
  (string-list [_]
    (comp (list "<AndAST ")
          (flat-map clauses string-list)
          (list ">"))))

(defn traverse [asts f]
  (assert-result x (instance? Maybe x))

  (reduce (reverse asts) (maybe empty-list)
            (fn [l ast]
              (flat-map (f ast)
                        (fn [emitted]
                          (map l (fn [x]
                                   (cons emitted x))))))))

(main [_]
      (let [aa (and-ast ['a 'b])]
        (println (map (traverse ['a 'b] maybe)
                      (fn [nc]
                        (.clauses aa nc)))))
      (println 'done))
