
(inline "
#include <unistd.h>
#include <sys/stat.h>\n")

(defn sleep [seconds]
  (inline Integer "
  replaceWorker();
  int secs = ((Integer *)seconds_0)->numVal;
  dec_and_free(seconds_0, 1);
  Value *result = integerValue(sleep(secs));
  return(result);\n"))

(add-ns rt (module "regression-tester.toc"))

(def agt (agent {}))

(main [_]
  (let [p1 (future (fn []
                     (sleep 3)
                     2))
        p2 (future (fn []
                     (sleep 2)
                     8))
        p3 (future (fn []
                     (sleep 1)
                     4))
        p4 (comp p1 p2 p3)]
    (rt/test (= 4 (extract p4))
             _FILE_ _LINE_)
    (extract p1)
    (extract p2)
    (extract p3))

  (let [p (promise)]
    (send agt (fn [n]
                (let [r (assoc n 'p (extract p))]
                  (sleep 3)
                  r)))
    (deliver p 8))
  (sleep 1)
  (print-err 'success))
