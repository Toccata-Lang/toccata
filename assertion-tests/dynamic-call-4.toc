
(deftype nougie [invoke-fn]
  (assert (instance? Fn invoke-fn))

  Stringable
  (string-list [x]
    (comp (list "<nougie ")
          (string-list (.invoke-fn x))
          (list ">")))

  Function
  (invoke [ev s]
    (invoke-fn s)))

;; TODO: don't think this catches the right error

(main [_]
  (let [wrapper (nougie (fn [s]
                          (maybe ['a s])))]
    (nougie (fn [s]
              (let [d (wrapper s)]
                (and d (let [[v ss] (extract d)]
                         (maybe [(inc v) ss])))))))

  (print-err 'done))

