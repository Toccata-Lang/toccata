(defn graph-title [tgt]
  (either (or (map (instance? GlobalFn tgt)
                   (comp str .var))
              (map (instance? ast/fn-ast tgt)
                   (fn [f]
                     (let [fn-sym (.fn-sym f)]
                       (cond (instance? ast/tagged-symbol fn-sym)
                             (str fn-sym)
                             "")))))
          (type-name tgt)))

