    (either (maybe-map x (fn [v]
                           (sha1-update v ctxt)))
            ctxt))

  (sha1 [x]
    (let [ctxt (sha1-init)]
      (sha1-update x ctxt)
      (sha1-finalize ctxt)))

  Eq
  (=* [x y]
    (inline C Maybe "return(maybeEQ(x_0, y_1));"))

  Stringable
  (string-list [mv]
    (either (maybe-map mv (fn [v]
                            (comp (list "<maybe ")
                                  (string-list v)
                                  (list ">"))))
            (list "<nothing>")))

  (show* [x indent]
    (either (maybe-map x (fn [v]
                           (comp (list "(maybe ")
                                 (show* v (comp indent "       "))
                                 (list ")"))))
            (list "nothing")))

  Container
  (extract [mv]
    !returns (inner-type-of mv)

    (inline C "return(maybeExtract(mv_0));"))

  (map [mv f]
    (maybe-map mv f))

  (map [mv f embed]
    (either (maybe-map mv (fn [v]
                            (map (f v) maybe)))
            (embed nothing)))

  (wrap [_ v]
    (maybe v))

  (apply [mv args]
    (maybe-apply mv (seq args) []))

  Composition
  (zero [mv]
    nothing)

  Associative
  (get [m _]
    m)

  (assoc [x y v]
